<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<main class="p-10 w-1/2 mx-auto">
  <div class="text-3xl font-bold mb-12">Add Product</div>
  <form class="flex flex-col max-w-lg m-4" action="/admin/edit-product" method="POST">
  <!-- <form class="flex flex-col max-w-lg m-4" action="<% if (editing) { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>" method="POST"> -->
    <div class="p-2 w-full flex">
      <div class="w-1/3 leading-10">Title:</div>
      <input class="form-input rounded w-2/3" type="text" name="title" value="<%= editing ? product.title : ''  %>" />
    </div>
    <div class="p-2 w-full flex">
      <div class="w-1/3 leading-10">Description:</div>
      <input class="form-input rounded w-2/3" type="text" name="description" value="<%= editing ? product.description : ''  %>" />
    </div>
    <div class="p-2 w-full flex">
      <div class="w-1/3 leading-10">URL:</div>
      <input class="form-input rounded w-2/3" type="text" name="imageURL" value="<%= editing ? product.imageURL : ''  %>" />
    </div>
    <div class="p-2 w-full flex">
      <div class="w-1/3 leading-10">Price:</div>
      <input class="form-input rounded w-2/3" type="text" name="price" value="<%= editing ? product.price : ''  %>" />
    </div>
    <input type="hidden" name="productId" value="<%= editing ? product.id : ''  %>" />
    <button class="w-40 bg-teal-500 hover:bg-teal-700 text-white font-bold mx-auto mt-4 py-2 px-4 rounded" type="submit"><% if (editing) { %>Modify Product<% } else { %>Add Product<% } %></button>
  </form>
</main>
<%- include('../includes/end.ejs') %>