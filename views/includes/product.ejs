<div class="w-1/3 px-8 mx-auto mt-8">
    <div class="mx-3 pb-4 rounded-lg shadow-xl overflow-hidden">
      <div class="mb-4"><img src=<%= product.imageURL %> alt=<%= product.id %>></div>
      <h2 class="px-4">Title: <%= product.title %></h2>
      <p class="px-4">Price: <%= product.price %>$</p>
      <p class="px-4">Description: <%= product.description %></p>
      <div class="flex justify-center">
        <a class="border border-teal-500 hover:bg-teal-500 hover:text-white text-teal-500 font-medium mt-2 py-1 px-2 rounded mx-1" href="/products/<%= product.id %>">Details</a>
        <a class="border border-teal-500 hover:bg-teal-500 hover:text-white text-teal-500 font-medium mt-2 py-1 px-2 rounded mx-1" href="/admin/edit-product/<%= product.id %>?edit=true">Edit</a>
        <form action="/card" method="POST" class="flex justify-center">
          <button class="bg-teal-500 hover:bg-teal-700 text-white font-medium mt-2 py-1 px-2 rounded mx-1" type="submit">Add to Card</button>
          <input type="hidden" name="productId" value="<%= product.id %>">
        </form>
        <form action="/admin/delete" method="POST" class="flex justify-center">
          <button class="bg-teal-500 hover:bg-teal-700 text-white font-medium mt-2 py-1 px-2 rounded mx-1" type="submit">Delet</button>
          <input type="hidden" name="productId" value="<%= product.id %>">
        </form>
      </div>
    </div>
  </div>
